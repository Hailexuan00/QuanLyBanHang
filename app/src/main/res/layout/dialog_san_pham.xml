<!-- dialog_san_pham.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_margin="16dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Giá bán -->
        <TextView
            android:id="@+id/tvGiaBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá bán: 0"
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:layout_marginBottom="8dp" />

        <!-- Tồn kho -->
        <TextView
            android:id="@+id/tvTonKho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tồn kho: 0"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Mã vạch -->
        <TextView
            android:id="@+id/tvMaVach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã vạch: 123456"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Nút Đóng -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhập"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btnSua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sửa"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btnXoa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xóa"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
